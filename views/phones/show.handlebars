<div class="row">
  <div class="col s12 m8">
    <h2>{{phone.name}} 
      <small>{{{editIcon phone.user.id user.id phone.id false}}} </small>
    </h2>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">Created on {{formatDate story.date 'MMMM Do YYYY'}}</span>
                <table class="striped">
                    <tbody>
                        <tr>
                        <td>Brand</td>
                        <td>{{phone.brand}}</td>
                        </tr>
                        <tr>
                        <td>Size</td>
                        <td>{{phone.size}}</td>
                        </tr>
                        <tr>
                        <td>Camera</td>
                        <td>{{phone.camera}}</td>
                        </tr>
                        <tr>
                        <td>Battery</td>
                        <td>{{phone.battery}}</td>
                        </tr>
                        <tr>
                        <td>Price</td>
                        <td>{{phone.prize}}</td>
                        </tr>
                    </tbody>
                    </table>
      </div>
    </div>
    <div class="card">
      <div class="card-content">
        <span class="card-title">Reviews</span>
        {{#if user}}
         <form method="post" action="/phones/review/{{phone.id}}">
              <div class="input-field">
                <textarea name="reviewBody" class="materialize-textarea"></textarea>
                <label> Add Review</label>
              </div>
              <input type="submit" value="Submit" class="btn">
            </form>
        {{else}}
          <p>Please <a href="/auth/google">log</a> in to leave a comment</p>
        {{/if}}
      </div>
    </div>
    {{#each phone.review}}
      <div class="card">
        <div class="card-content">
            <h5>{{reviewBody}}</h5>
            <div class="chip">
              <img src="{{reviewUser.image}}">
              <a href="/phones/user/{{reviewUser.id}}">
              {{reviewUser.firstName}} {{reviewUser.lastName}}
              </a>
            </div>
            <br>
            <small>Posted: {{formatDate reviewDate 'MMMM Do YYYY'}}</small>
          </div>
        
      </div>
    {{/each}}
  </div>
<div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{phone.user.firstName}} {{phone.user.lastName}}</span>
        <img src="{{phone.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/phones/user/{{phone.user.id}}">More From {{phone.user.firstName}}</a>
      </div>
    </div>
  </div>

</div>