<h1><img src={{user.image}} alt="Profile Photo" style="width:50px;height:60px;" >
Welcome {{user.firstName}}</h1>
<h4>Your Phones</h4>
{{#if phones}}
  <table class="striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each phones}}
        <tr>
          <td><a href="/phones/show/{{id}}">{{name}}</a></td>
          <td>{{formatDate data 'MMMM do YYYY'}}</td>
          <td><span class="dash-status">{{prize}}</span></td>
          <td>
            <a class="btn left-align" href="/phones/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>

            <form action="/phones/{{id}}?_method=DELETE" method="post" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}